<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocontrol"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_nombre_main"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginTop="167dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/grey"
        android:ems="10"
        android:hint="Nombre del personaje"
        android:inputType="textCapWords"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/edt_ip_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_ip_main"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginBottom="266dp"
        android:backgroundTint="@color/grey"
        android:ems="10"
        android:hint="DirecciÃ³n ip"
        android:inputType="textPostalAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/btn_conectar_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre_main" />

    <Button
        android:id="@+id/btn_conectar_main"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="@color/grey"
        android:text="Conectar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_ip_main" />
</android.support.constraint.ConstraintLayout>